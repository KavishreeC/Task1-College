
<div class="mt-4">
<h1 class="d-flex justify-content-center">Students List</h1>

<table class="table table-bordered table-hover table-striped ">
  <thead class='table-dark'>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th>Sec</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.department %></td>
        <td><%= student.sec %></td>
        <td><%= student.email %></td>
        <td><%= student.phone %></td>
        <td><%= link_to 'Show', student, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_student_path(student),class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="d-flex justify-content-between">
<%= link_to 'Add New Student', new_student_path, class:"btn btn-primary" %>
<br/>
<%= link_to 'Go to Admin page', users_path, class: "btn btn-primary"%>
