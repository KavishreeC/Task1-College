<div class="container">
<h2 class=" my-4">Student Details</h2>
<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Department:</strong>
  <%= @student.department %>
</p>

<p>
  <strong>Section:</strong>
  <%= @student.sec %>
</p>

<p>
  <strong>Email:</strong>
  <%= @student.email %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @student.phone %>
</p>

<%= link_to 'Edit', edit_student_path(@student),class: "btn btn-primary" %> 
<%= link_to 'Back', students_path, class: "btn btn-primary" %>
</div>
