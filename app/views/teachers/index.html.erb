
<div class="mt-4">
<h1 class="d-flex justify-content-center my-4">Teachers List</h1>

<table class="table table-bordered table-striped tabe-hover ">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.dept %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.phone %></td>
        <td><%= link_to 'Show', teacher,class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher),class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="d-flex justify-content-between ">
<%= link_to 'Add New Teacher', new_teacher_path , class: "btn btn-primary" %>
<br/>
<%= link_to 'Go to Admin page', users_path, class: "btn btn-primary"%>
